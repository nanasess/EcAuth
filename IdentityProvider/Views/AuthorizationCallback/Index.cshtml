@{
    ViewData["Title"] = "Authorize";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AppName のアクセスを承認</title>
    <script src="https://unpkg.com/@@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="container mx-auto px-4">
        <div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="px-6 py-4">
                <h2 class="text-2xl font-bold mb-2">Authorize</h2>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                    <strong>Authorization Code:</strong> @ViewData["Code"]
                    <br />
                    <strong>State:</strong> @ViewData["State"]
                    <br />
                    <strong>Scope:</strong> @ViewData["Scope"]
                </div>
                <form method="post" action="/auth/callback">
                    <input type="hidden" name="code" value="@ViewData["Code"]" />
                    <input type="hidden" name="state" value="@ViewData["State"]" />
                    <input type="hidden" name="scope" value="@ViewData["Scope"]" />
                    <div class="flex justify-between space-x-4">
                        <button type="submit" class="bg-blue-700 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded w-full" name="action" value="authorize">承認</button>
                        <button type="submit" class="bg-red-700 hover:bg-red-500 text-white font-bold py-2 px-4 rounded w-full" name="action" value="deny">拒否</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

